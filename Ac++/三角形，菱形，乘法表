#include<iostream>
using namespace std;
int main()
{
    int i,j,n;
    cout<<"请输入行数n:";
    cin>>n;
    for(i=0;i<n;i++)//大循环，行数
    {
    	for(j=0;j<n-i;j++)//n-j是直角三角形
    	cout<<" "; 	
    	for(j=0;j<2*i+1;j++)
    	//小循环，输出空格*公式。
    	cout<<"*";
    	cout<<endl;
    	}
    	/*倒三角*/
    	   i=0,j=0;
    for(i=0;i<n+1;i++)
    {
    	for(j=0;j<i;j++)
    	cout<<" ";
    	for(j=0;j<(2*n+1)-2*i;j++)
    	cout<<"*";
    	cout<<endl;
    	}
  cout<<endl;
 
 i=0,j=0;
    for(i=0;i<n;i++)
    {
    	for(j=0;j<n-i;j++)//n-j是直角三角形
    	cout<<" ";
    	for(j=0;j<2*i+1;j++)
    	cout<<"*";
    	cout<<endl;
    	}
    	
    	cout<<endl;
  i=0,j=0;
    for(i=0;i<n+1;i++)
    {
    	for(j=0;j<i;j++)
    	cout<<" ";
    	for(j=0;j<(2*n+1)-2*i;j++)
    	cout<<"*";
    	cout<<endl;
    	}
    	cout<<endl;
  /*乘法表*/  	
    	int a,b;
for(a=1;a<=9;a++)//行数
{
	for(b=1;b<=a;b++)//列数
cout<<b<<"x"<<a<<"="<<a*b<<" " ;//输出
cout<<endl;
}
    return 0;
}
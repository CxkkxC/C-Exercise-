#include<iostream>
using namespace std;
int  main()
{
	int x[2][3]={1,4,6,2,5,3};
	//定义一个二维数组
	int  max,i,j,m,n;
	max=x[0][0];
	//假设这个二维数组最大值为x[0][0]
for(i=0;i<2;i++)
  for(j=0;j<3;j++)
  if (x[i][j]>max)
  //循环一个个元素进行比较
   {
   	max=x[i][j];
  m=i+1; //输出元素所在行列数
  n=j+1;
  }
  cout<<max<<" "<<m<<" "<<n<<endl ;
  return 0;
  }
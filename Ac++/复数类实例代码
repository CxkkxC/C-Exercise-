#include<iostream>
using namespace std;
class Complex
{
	private:
	double real,image;
	public:
	Complex(double x = 0,double y = 0)
	{
		real = x;
		image = y;
		}
		Complex (Complex &c)
		{
			real = c.real;
			image = c.image;
			}
			void show()
			{
				cout<<real<<"+"<<image<<"i"<<endl;
				}
	};
	int main()
	{
		Complex c1(1,3),c2(2,4),c3;
		c1.show();
		c2.show();
		return 0;
		}
#include<iostream>
#include<string>
using namespace std;
int main() {
  string a, b;
  cin >> a >> b;
  if (a.length() != b.length()) {
    cout << 1;
    return 0;
  }
  int flag = 1, i;
  for (i = 0; i < a.length(); i++) {
    if (a[i] != b[i]) {
      flag = 0;
      break;
    }
  }
  if (flag == 1) {
    cout << 2;
    return 0;
  }
  for (i = 0; i < a.length(); i++) {
    if (a[i] == b[i])
      continue;
    if (a[i] != b[i] && tolower(a[i]) == tolower(b[i]))
      continue;
    else {
      cout << 4;
      break;
    }
  }
  if (i == a.length())
    cout << 3;
  return 0;
}

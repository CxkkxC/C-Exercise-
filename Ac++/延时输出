    float x, y;
    for (y = 1.5f; y >-1.5f; y -= 0.1f)
    {
        for (x = -1.5f; x <1.5f; x += 0.05f)
        {
            float a = x*x + y*y - 1;
            if ((a*a*a- x*x*y*y*y)<=0)//心形方程
                cout << "\033[4;31;m*\033[m";
            else cout << " ";
        }
        cout << endl;
    }
	return 0;

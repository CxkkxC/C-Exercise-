#include <iostream>
using namespace std;
int main()
{
int paaword = 12345;
int num;
cout<<"Input your paaword end with enter"<<endl;
while(cin>>num) //输入密码登陆
{
cout<<"If you are sure,input 'Y',if you want to input again,input 'N':"<<endl;
char c;
cin>>c;
if(c == 'Y' || c == 'y') //输入y以确认密码
{
if(num == 12345) //密码正确
{
cout<<"Right!thanks for your joinning!"<<endl;
return 0;//正常退出
}
else
cout<<"Wrong password,input again:"<<endl;//密码错误，将会跳转到while(cin>>num)，以便重新输入
}
else if(c == 'N' || c == 'n') //输入n以重新输入密码
{
cout<<"Input again"<<endl;
continue;
}
else
{
cout<<"Wrong input!"<<endl;
return -1;//退出系统
}
}
}
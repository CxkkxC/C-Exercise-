#include<iostream>
using namespace std;
int main() {
  int n, b, i, j;
  cin >> n;
  int x[n];
  for (i = 0; i < n; i++) {
    cin >> x[i];
  }
  int max = x[0], min = x[0];
  long long sum = 0;
  for (j = 0; j < n; j++) {
    sum = sum + x[j];
    if (max <= x[j])
      max = x[j];
    if (min >= x[j])
      min = x[j];
  }
  cout << max << endl;
  cout << min << endl;
  cout << sum;
}
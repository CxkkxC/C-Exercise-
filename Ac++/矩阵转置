#include<iostream>
using namespace std;
int main()
{
	int n,m;
	cout<<"请输入行列数:"<<endl;
	cout<<"行数:";
	cin>>n;
	cout<<"列数:";
	cin>>m;	cout<<"请依次输入数组元素，总个数为:"<<n*m<<endl;
int a[n][m],b[n][m];
for(int i=0;i<n;i++)
{
for(int j=0;j<m;j++)
{
cin>>a[i][j];
b[j][i]=a[i][j];
}
}
cout<<"原矩阵为："<<endl;
for(int p=0;p<n;p++)
{
for(int q=0;q<m;q++)
{
cout<<a[p][q]<<" ";
}
cout<<endl;
}
cout<<endl;
cout<<"转置后的矩阵为："<<endl;
for(int c=0;c<m;c++)
{
for(int d=0;d<n;d++)
{
cout<<b[c][d]<<" ";
}
cout<<endl;
}
return 0;
}
 #include<iostream>
using namespace std;
void sort(int a[], int n) {
  int i, j, temp;
  for (i = 0; i < n; i++) {
    for (j = i + 1; j < n; j++)
      if (a[i] > a[j]) {
        temp = a[i];
        a[i] = a[j];
        a[j] = temp;
      }
  }
}
int main() {
  int n, i, sum = 0;
  cin >> n;
  int a[n];
  for (i = 0; i < n; i++)
    cin >> a[i];
  for (i = 0; i < n-1; i++) {
    sort(a, n);
    sum += a[i] + a[i + 1];
    a[i + 1] += a[i];
    a[i] = 0;
  }
  cout << sum;
}